public class sortMedian {
  public static void main(String[] args){
    int[] n1 = {1, 2, 4, 7, 26, 77};
    int[] n2 = {3,66,88,100};
    // 1, 2, 3, 4, 7, 26, 66, 77, 88, 100
    //3, 66, 77, 88 , 100
    double n3 = findMedianSortedArrays(n1, n2);
    System.out.println(n3);
  }
  public static double findMedianSortedArrays(int[] nums1, int[] nums2) { 
    int p = nums1.length;
    int q = nums2.length;
    double[] res = new double[p+q];
    double med = Math.floor((p+q)/2);
    int i=0, j=0, k=0;
    // if med odd, stop at med, return avg of med, med+1
    // else med even, stop at med+1
    while((i+j)<=med){
      if((nums1[i]<=nums2[j])&&(i<=p)){
        res[k++]=nums1[i++];
      } else {
        if((nums1[i]>nums2[j])&&(j<=q)){
          res[k++]=nums2[j++];
        }
      }
    }
    
    for(int y=0;y<=med;y++){
      System.out.print(res[y]+", ");
    }
    System.out.println("");
    System.out.println(i);
    System.out.println(j);
    if(med%2==0){
      //med even so return res[k]
      return res[--k];
    } else {
      double kin = (res[--k]+res[--k])/2;
      System.out.println(kin);
      return kin;
    }
      
  } 
}